<li class="<%= "small" unless graph %>">
  <a href="<%= rubygem_path(rubygem) %>" class="gems__gem">
    <div class="gems__gem__info">
      <p class="gems__gem__name">
        <%= h rubygem.name %>
        <span class="gems__gem__version"><%= h rubygem.versions.most_recent %></span>
      </p>
    </div>
    <p class="gems__gem__downloads__count">
      <%= h number_with_delimiter(rubygem.downloads) %>
      <span class="gems__gem__downloads__heading">Downloads</span>
    </p>
    <% if graph %>
      <div id="graph-<%= rubygem.id %>" class="profile-graph">
      </div>
    <% end %>
  </a>
</li>
